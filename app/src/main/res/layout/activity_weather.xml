<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.olderlycare.mobile.olderlycare.WeatherActivity"
    android:id="@+id/drawerlayout_weather">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:text="Condition" />

        <ImageView
            android:id="@+id/todayIcon"
            android:layout_width="118dp"
            android:layout_height="107dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Location"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/Temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Temperature"
            android:layout_gravity="center_horizontal"/>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal">

            <TableRow
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:id="@+id/firstDayIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding = "8dip"/>
                <ImageView
                    android:id="@+id/secondDayIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding = "8dip"/>
                <ImageView
                    android:id="@+id/thirdDayIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding = "8dip"/>
                <ImageView
                    android:id="@+id/fourthDayIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding = "8dip"/>
                <ImageView
                    android:id="@+id/fifthDayIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding = "8dip"/>
                <ImageView
                    android:id="@+id/sixthDayIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding = "8dip"/>
                <ImageView
                    android:id="@+id/seventhDayIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding = "8dip"/>

            </TableRow>

            <TableRow
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/firstDayHigh"
                    android:text="1H" />

                <TextView
                    android:id="@+id/secondDayHigh"
                    android:text="2H" />
                <TextView
                    android:id="@+id/thirdDayHigh"
                    android:text="3H" />
                <TextView
                    android:id="@+id/fourthDayHigh"
                    android:text="4H" />
                <TextView
                    android:id="@+id/fifthDayHigh"
                    android:text="5H" />
                <TextView
                    android:id="@+id/sixthDayHigh"
                    android:text="6H" />
                <TextView
                    android:id="@+id/seventhDayHigh"
                    android:text="7H" />

            </TableRow>

            <TableRow
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/firstDayLow"
                    android:text="1L" />

                <TextView
                    android:id="@+id/secondDayLow"
                    android:text="2L" />
                <TextView
                    android:id="@+id/thirdDayLow"
                    android:text="3L" />
                <TextView
                    android:id="@+id/fourthDayLow"
                    android:text="4L" />
                <TextView
                    android:id="@+id/fifthDayLow"
                    android:text="5L" />
                <TextView
                    android:id="@+id/sixthDayLow"
                    android:text="6L" />
                <TextView
                    android:id="@+id/seventhDayLow"
                    android:text="7L" />
            </TableRow>


            <TableRow
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/firstDayDay"
                    android:text="1D" />

                <TextView
                    android:id="@+id/secondDayDay"
                    android:text="2D" />
                <TextView
                    android:id="@+id/thirdDayDay"
                    android:text="3D" />
                <TextView
                    android:id="@+id/fourthDayDay"
                    android:text="4D" />
                <TextView
                    android:id="@+id/fifthDayDay"
                    android:text="5D" />
                <TextView
                    android:id="@+id/sixthDayDay"
                    android:text="6D" />
                <TextView
                    android:id="@+id/seventhDayDay"
                    android:text="7D" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navi_wea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:menu="@menu/navigation_menu"
        android:layout_gravity = "start">

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
